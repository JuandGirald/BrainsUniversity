<% provide(:title, "Sign in") %>


<div class="sign-in-page row">
	<div class="container sign-forms sign-in">
	  
		<% flash.each do |key, value| %>
    	<div class="alert alert-<%= key %>"><%= value %></div>
  	<% end %>
	  
	  <h1>Sign in</h1>

	  <div class="span6 offset3">
	    <%= simple_form_for(:session, url: sessions_path) do |f| %>
	    	<div class="form-inputs">
		    	<%= f.input :email, label: false, requiered: true, :autofocus => true, placeholder: 'Tu Correo' %>
	    		<%= f.input :password, placeholder: 'Tu ContraseÃ±a', label: false %>
	  			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		    </div>
	    <% end %>
	    <div class="link-sign-in">
	    	<label>New user? <%= link_to "Sign up now!", signup_path %></label>
	    </div>
	  </div>
	</div>
</div>
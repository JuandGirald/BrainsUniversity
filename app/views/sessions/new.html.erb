<% provide(:title, "Sign in") %>


<div class="sign-in-page row">
	<div class="container sign-forms sign-in">
	  
		<% flash.each do |key, value| %>
    		<div class="alert alert-<%= key %>  alert-dismissable">
    			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    			<%= value %>
    		</div>
  		<% end %>
	  
	  <h1>Ingresar</h1>

	  <div class="span6 offset3">
	    <%= simple_form_for(:session, url: sessions_path) do |f| %>
	    	<div class="form-inputs">
		    	<%= f.input :email, label: false, requiered: true, :autofocus => true, placeholder: 'Tu Correo' %>
	    		<%= f.input :password, placeholder: 'Tu Contraseña', label: false %>
	  			<%= f.submit "Ingresar", class: "btn btn-large btn-primary" %>
		    </div>
	    <% end %>
	    <div class="link-sign-in">
	    	<label>¿Nuevo Usuario? <%= link_to "¡Regrístrate ya!", signup_path %></label>
	    </div>
	  </div>
	</div>
</div>
<% provide(:title, @user.name) %>
<div class="container profile">
	<div class="row">
	  <aside class="span4">
	    <section>
	    	<h1>
	    		<img src="<%= gravatar_for @user %>" alt="<%= @user.name %>" class='gravatar'>
	    		<%= @user.name %>
				</h1>
	    </section>
	  </aside>
	  <%= link_to 'Edit', edit_user_path(@user) %> |
		<%= link_to 'Back', users_path %>
	</div>

	
</div>

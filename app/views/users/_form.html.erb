<%= simple_form_for(@user) do |f| %>
  <div class="form-inputs">
    <%= f.input :name,  label: false, requiered: true, placeholder: 'Tu Nombre'%>
    <%= f.input :email, label: false, requiered: true, :autofocus => true, placeholder: 'Tu Correo' %>
    
  </div>

  <%= f.button :submit, "Ingresar" , class: "btn btn-large btn-primary"%>
<% end %>

<%= simple_form_for(@user) do |f| %>
  <div class="form-inputs">
    <%= f.input :name,  label: false, requiered: true, placeholder: 'Nombre'%>
    <%= f.input :email, label: false, requiered: true, :autofocus => true, placeholder: 'Correo' %>
    <%= f.input :password, placeholder: 'Contraseña', label: false %>
  	<%= f.input :password_confirmation, placeholder: 'Confirmar Contraseña', label: false%>
  
  </div>

  <%= f.button :submit, "Ingresar" , class: "btn btn-large btn-primary"%>
<% end %>
